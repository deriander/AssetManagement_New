
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/NewLayout.cshtml";
}

<div class="container-fluid">
    <div class="row page-titles">
        <div class="col-md-6 col-8 align-self-center">
            <h3 class="text-themecolor m-b-0 m-t-0">Request Dashboard</h3>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="javascript:void(0)">Home</a></li>
                <li class="breadcrumb-item active">Request Dashboard</li>
            </ol>
        </div>
        <div class="col-md-6 col-4 align-self-center">
            <button class="right-side-toggle waves-effect waves-light btn-info btn-circle btn-sm pull-right m-l-10"><i class="ti-settings text-white"></i></button>
            <div class="dropdown pull-right m-r-10 hidden-sm-down">
                <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"> March 2020 </button>
                <div class="dropdown-menu" aria-labelledby="dropdownMenuButton"> <a class="dropdown-item" href="#">March 2020</a> <a class="dropdown-item" href="#">April 2020</a> <a class="dropdown-item" href="#">May 2020</a> </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <h2 class="card-title">Request</h2>
                    <hr />
                    <!-- Trigger the modal with a button -->
                    <button type="button" onclick="ShowModal()" class="btn pull-left hidden-sm-down btn-success m-b-5" data-placement="top"> <i class="mdi mdi-plus-circle"></i> Request Item</button>
                    <div>
                        @*<button type="button" onclick="location.href='@Url.Action("ExportToPDF", "Department")'" class="btn pull-right hidden-sm-down btn-default m-l-5" data-placement="top"> PDF</button>
                            <button type="button" onclick="location.href='@Url.Action("ExportToExcel", "Department")'" class="btn pull-right hidden-sm-down btn-default m-l-5" data-placement="top"> Excel</button>
                            <button type="button" onclick="location.href='@Url.Action("ExportToCSV", "Department")'" class="btn pull-right hidden-sm-down btn-default m-l-5" data-placement="top"> CSV</button>*@
                    </div>
                    <!-- Modal -->
                    <div id="myModal" class="modal fade" role="dialog">
                        <div class="modal-dialog ">
                            <!-- Modal content -->
                            <div class="modal-content">
                                <form id="myForm">
                                    <div class="modal-header">
                                        <h4 class="modal-title">Add Request</h4>
                                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                                    </div>
                                    <div class="modal-body">
                                        <div class="form-group">
                                            <label for="Brand">Brand</label>
                                            <input class="form-control" id="Brand" placeholder="Brand">
                                        </div>
                                        <div class="form-group">
                                            <label for="Cpu">CPU</label>
                                            <input class="form-control" id="Cpu" placeholder="Cpu">
                                        </div>
                                        <div class="form-group">
                                            <label for="Gpu">GPU</label>
                                            <input class="form-control" id="Gpu" placeholder="Gpu">
                                        </div>
                                        <div class="form-group">
                                            <label for="Ram">RAM</label>
                                            <input class="form-control" id="Ram" placeholder="Ram">
                                        </div>
                                        <div class="form-group">
                                            <label for="Display">Display</label>
                                            <input class="form-control" id="Display" placeholder="Display">
                                        </div>
                                        <div class="form-group">
                                            <label for="Storage">Storage</label>
                                            <input class="form-control" id="Storage" placeholder="Storage">
                                        </div>
                                        <div class="form-group">
                                            <label for="Os">Os</label>
                                            <input class="form-control" id="Os" placeholder="Os">
                                        </div>
                                    </div>
                                    <div class="modal-footer">
                                        <button id="RequestBtn" type="button" onclick="AddRequest()" class="btn btn-success" data-dismiss="modal">Add Request</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                    <table id="requestTable" class="display">
                        <thead>
                            <tr>
                                <th>
                                    Request Date
                                </th>
                                <th>
                                    Approval 1
                                </th>
                                <th>
                                    Approval 2
                                </th>
                                <th>
                                    Status Approval
                                </th>
                                <th>
                                    Brand
                                </th>
                                <th>
                                    CPU
                                </th>
                                <th>
                                    GPU
                                </th>
                                <th>
                                    RAM
                                </th>
                                <th>
                                    Display
                                </th>
                                <th>
                                    Storage
                                </th>
                                <th>
                                    Os
                                </th>
                            </tr>
                        </thead>
                        <tbody class="deptbody" />
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


